{
    "$schema": "https://json.schemastore.org/jest",
    "rootDir": "../",
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": ["**/tests/unit/**/*.unit-spec.ts"],
    "moduleFileExtensions": ["ts", "js", "json"],
    "transform": {
        "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": ["src/**/*.ts", "!src/main.ts", "!src/**/index.ts"],
    "moduleNameMapper": {
        "^@/(.*)$": "<rootDir>/src/$1"
    },
    "globals": {
        "ts-jest": {
            "isolatedModules": true
        }
    },
    "verbose": true
}
